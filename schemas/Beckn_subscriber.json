    "signing_public_key": {
      "type": "string",
      "description": "Signing public key of the subscriber."
    },
    "encr_public_key": {
      "type": "string",
      "description": "Encryption public key of the subscriber."
    }
  },
  "required": [
    "subscriber_id",
    "url",
    "type",
    "countries",
    "domain",
    "signing_public_key"
  ]
}
