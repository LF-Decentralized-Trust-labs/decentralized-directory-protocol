{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Beckn Subscriber",
  "description": "A registry entry describing endpoints and keys of a beckn network participant (BAP/BPP/CDS).",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "subscriber_id": {
      "type": "string",
      "description": "Globally unique identifier of the platform, typically an FQDN."
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Specifies the callback URL of the subscriber. It must share the same domain as subscriber_id."
    },
    "type": {
      "type": "string",
      "description": "Type of role played in the network.",
      "enum": ["BAP", "BPP", "BG", "CDS"]
    },
    "domain": {
      "type": "string",
      "description": "Operating industry domain that this subscriber offers its products or services in. A single subscriber can operate in multiple domains and each can be added as a separate record."
    },
    "countries": {
      "type": "array",
      "description": "Countries where the subscriber operates, provides services, or conducts business.",
      "items": {
        "type": "string",
        "description": "ISO 3166-1 alpha-3 country code.",
        "enum": [
          "AFG", "ALB", "DZA", "ASM", "AND", "AGO", "AIA", "ATA", "ATG", "ARG",
          "ARM", "ABW", "AUS", "AUT", "AZE", "BHS", "BHR", "BGD", "BRB", "BLR",
